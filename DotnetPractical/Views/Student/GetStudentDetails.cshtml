@model IEnumerable<DotnetPractical.Models.Student>

@{
	ViewData["Title"] = "GetStudentDetails";
}

<h1>GetStudentDetails</h1>


<div>
	<form asp-action="SearchSTudentByName" asp-controller="Student">
		<div class="form-group">
			<input class="form-control" name="Search"/>
		</div>
		<div>
			<button class="btn btn-dark" type="submit">Search By Name</button>
		</div>
		<div class="col-md-6">
			<a asp-action="GetStudentDetails" class="text-dark">Back To FullList</a>
		</div>
	</form>

