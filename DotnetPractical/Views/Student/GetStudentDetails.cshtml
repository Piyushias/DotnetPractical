<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Student_Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Student_Age)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Standard)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Image)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Stuent_RollNo)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Student_Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Student_Age)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Standard)
				</td>
				<td>
					@if (item.Image is not null)
					{
						<img src="data:image/png;base64,@Convert.ToBase64String(item.Image)" width="50px" height="ss50px" alt="Picture" />
					}
					else
					{
						<p>No Image Found</p>
					}
					
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Stuent_RollNo)
				</td>
				@*<td>
					<a asp-action="Edit" asp-route-id="@item.Student_Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Student_Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Student_Id">Delete</a>
				</td>*@
			</tr>
		}
	</tbody>
</table>
